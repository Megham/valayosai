{
  "name": "Valayosai",
  "version": "0.1.6",
  "manifest_version": 2,
  "description": "Listen to any Tamil song the moment you think about it.",
  "background": {
    "scripts": ["javascripts/jquery-1.9.1.min.js","javascripts/background.js"]
  },
  "browser_action": {
	 "default_popup": "popup.html",
   "default_icon": "images/icon256.png"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
   },
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*", "http://valayosai.com/*"],
      "js": ["javascripts/jquery-1.9.1.min.js", "javascripts/cs.js"],
      "css": ["stylesheets/cs.css"]
    }
  ],
  
 "permissions": [ "tabs", "http://*/*", "https://*/*" ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'"
}
